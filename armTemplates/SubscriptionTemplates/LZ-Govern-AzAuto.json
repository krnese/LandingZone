{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {
        "policyDefinitionName": "LZ-Govern-Automation-Account",
        "policyAssignmentName": "LZ-Govern-AzAuto"
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policyDefinitions",
            "apiVersion": "2019-09-01",
            "name": "[variables('policyDefinitionName')]",
            "properties": {
                "displayName": "Govern Automation account",
                "description": "Policy to lock down automation account child resources",
                "parameters": {},
                "policyRule": {
                    "if": {
                        "anyOf": [
                            {
                                "field": "type",
                                "equals": "Microsoft.Automation/automationAccounts/runbooks"
                            },
                            {
                                "field": "type",
                                "equals": "Microsoft.Automation/automationAccounts/variables"
                            },
                            {
                                "field": "type",
                                "equals": "Microsoft.Automation/automationAccounts/modules"
                            },
                            {
                                "field": "type",
                                "equals": "Microsoft.Automation/automationAccounts/credentials"
                            },
                            {
                                "field": "type",
                                "equals": "Microsoft.Automation/automationAccounts/connections"
                            },
                            {
                                "field": "type",
                                "equals": "Microsoft.Automation/automationAccounts/certificates"
                            }
                        ]
                    },
                    "then": {
                        "effect": "deny"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "2018-05-01",
            "name": "[variables('policyAssignmentName')]",
            "location": "[deployment().location]",
            "dependsOn": [
                "[variables('policyDefinitionName')]"
            ],
            "properties": {
                "description": "[variables('policyAssignmentName')]",
                "displayName": "[variables('policyAssignmentName')]",
                "scope": "[subscription().id]",
                "policyDefinitionId": "[concat(subscription().id, '/providers/Microsoft.Authorization/policyDefinitions/', variables('policyDefinitionName'))]"
            }
        }
    ],
    "outputs": {}
}